{
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "tabWidth": 2,
  "printWidth": 100,
  "singleQuote": true,
  "jsxBracketSameLine": true,
  "useTabs": false,
  "trailingComma": "all",
  "semi": false,
  "parser": "babel",
  "overrides": [
    {
      "files": ["*.php"],
      "options": {
        "tabWidth": 4,
        "parser": "plugin-php"
      }
    },
    {
      "files": ["*.md"],
      "options": {
        "parser": "markdown"
      }
    }
  ]
}
